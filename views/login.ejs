<div class="login-form-outer">
  <div class="login-form-container">
    <h2 class="mb-4">Logowanie</h2>
    <form id="login-form" method="POST" action="login">
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" required placeholder="Wprowadź email">
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Hasło</label>
        <input type="password" class="form-control" id="password" name="password" required placeholder="Wprowadź hasło">
      </div>
      <button type="submit" class="btn btn-primary login-btn">Zaloguj się</button>
    </form>
    <div class="login-register-info mt-4 text-center">
      Nie masz konta? <a href="register" class="register-link">Zarejestruj się</a>
    </div>
    <div id="login-error" class="alert alert-danger mt-3 d-none" role="alert"></div>
  </div>
</div>
<script src="js/login.js"></script>
