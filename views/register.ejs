<div class="container mt-5" style="max-width: 400px;">
  <h2 class="mb-4 text-center">Rejestracja</h2>
  <form id="register-form" method="POST" action="<%= basePath || '/' %>register">
    <div class="mb-3">
      <label for="passenger_name" class="form-label">Imię</label>
      <input type="text" class="form-control" id="passenger_name" name="passenger_name" required>
    </div>
    <div class="mb-3">
      <label for="passenger_surname" class="form-label">Nazwisko</label>
      <input type="text" class="form-control" id="passenger_surname" name="passenger_surname" required>
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" name="email" required>
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Hasło</label>
      <input type="password" class="form-control" id="password" name="password" required>
    </div>
    <button type="submit" class="btn btn-primary w-100">Zarejestruj</button>
  </form>
  <div class="mt-3 text-center">
    <a href="<%= basePath || '/' %>login">Masz już konto? Zaloguj się</a>
  </div>
  <div id="register-error" class="alert alert-danger mt-3 d-none" role="alert"></div>
</div>

<script src="<%= basePath || '/' %>js/register.js"></script>
