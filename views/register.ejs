<div class="container mt-5" style="max-width: 400px;">
  <h2 class="mb-4 text-center">Register</h2>
  <form id="register-form" method="POST" action="/register">
    <div class="mb-3">
      <label for="passenger_name" class="form-label">First Name</label>
      <input type="text" class="form-control" id="passenger_name" name="passenger_name" required>
    </div>
    <div class="mb-3">
      <label for="passenger_surname" class="form-label">Last Name</label>
      <input type="text" class="form-control" id="passenger_surname" name="passenger_surname" required>
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" name="email" required>
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" id="password" name="password" required>
    </div>
    <button type="submit" class="btn btn-primary w-100">Register</button>
  </form>
  <div class="mt-3 text-center">
    <a href="/login">Already have an account? Log in</a>
  </div>
  <div id="register-error" class="alert alert-danger mt-3 d-none" role="alert"></div>
</div>

<script src="/js/register.js"></script>
