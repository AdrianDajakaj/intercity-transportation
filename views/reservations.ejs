                    <div class="stop-city"><%= reservation.end_city %></div>
                    <div class="stop-time"><i class="fa fa-clock-o"></i> <%= reservation.end_departure_time || '-' %></div>
                  </div>
                </div>
              </div>
              
              <div class="reservation-details">
                <div class="detail-item">
